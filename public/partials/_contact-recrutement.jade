div.main-wrapper.contact.bleu
	div.main-container
		section#contact
			form#contact-form-recrutement(method="", action="fake-mailer.php")
				#contact-results
				.form
					h2 Nous contacter
					.form
						p
							label(for='name') Nom Pr√©nom
							input#name(type='text', name='name', required="true")
					.form-bottom
						p
							label(for='email') Email
							input#email(type='email', name='email', required="true")

						p
							label(for='cv') CV (PDF)
							input#cv(type='file', name='cv')

						p.url
							label(for='url') Url
							input#url(type='text', name='url')

						p
							label(for='message') Message
							textarea#message(name='message', rows='10', required="true")

					#contact-error
					p.submit
						input.button.qerto.red(type='submit', value='Envoyer')